<?xml version="1.0" encoding="UTF-8"?>
<actions>
<action>
	<icon>Alacritty</icon>
	<name>Open in Terminal</name>
	<submenu></submenu>
	<unique-id>alacritty-1000</unique-id>
	<command>/usr/bin/alacritty --working-directory %f</command>
	<description>Example for a custom action</description>
	<range></range>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
</action>
<action>
    <icon>background</icon>
    <name>Set as Wallpaper</name>
    <unique-id>wall-1000</unique-id>
    <command>~/.local/bin/wallp.sh %f</command>
    <description>Set the selected image as Niri wallpaper</description>
	<range>*</range>
    <patterns>*.jpg;*.jpeg;*.png;*.gif;*.webp</patterns>
    <image-files/>
</action>
<action>
	<icon>visual-studio-code</icon>
	<name>Open with Code</name>
	<submenu></submenu>
	<unique-id>vscode-1000</unique-id>
	<command>/usr/bin/code %f</command>
	<description>Open the folder or file in Visual Studio Code.</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
<action>
	<icon>application-audio</icon>
	<name>Convert to MP3</name>
	<submenu></submenu>
	<unique-id>v2mp3-1000</unique-id>
	<command>~/.local/bin/v2mp3.sh %F</command>
	<description>Extract audio using ffmpeg</description>
	<range>*</range>
	<patterns>*</patterns>
	<video-files/>
</action>
<action>
	<icon>application-video</icon>
	<name>Convert to MP4</name>
	<submenu></submenu>
	<unique-id>ts2mp4-1000</unique-id>
	<command>~/.local/bin/ts2mp4.sh %F</command>
	<description>Convert ts file to mp4 format</description>
	<range>*</range>
	<patterns>*.ts</patterns>
	<video-files/>
</action>
