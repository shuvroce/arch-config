<action>
	<icon>application-archive-zip</icon>
	<name>Extract</name>
	<submenu></submenu>
	<unique-id>ext-1000</unique-id>
	<command>~/.local/bin/extract.sh %F</command>
	<description>Extract zip, rar, 7z, tar archives</description>
	<range>*</range>
	<patterns>*.zip;*.tar.gz;*.7z;*.rar;*.tgz;*.tar.xz;*.tar.bz2</patterns>
	<other-files/>
</action>
<action>
	<icon>application-archive-zip</icon>
	<name>Compress to Zip</name>
	<submenu></submenu>
	<unique-id>zip-1000</unique-id>
	<command>~/.local/bin/archive.sh %F</command>
	<description>Compress to zip archive</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
<action>
	<icon>dialog-password</icon>
	<name>Open as Root</name>
	<submenu></submenu>
	<unique-id>root-1000</unique-id>
	<command>pkexec thunar %f</command>
	<description>Open directory and files with root previledge</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<other-files/>
</action>
</actions>
