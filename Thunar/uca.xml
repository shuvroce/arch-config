<?xml version="1.0" encoding="UTF-8"?>
<actions>
<action>
	<icon>Alacritty</icon>
	<name>Open in Terminal</name>
	<submenu></submenu>
	<unique-id>alacritty-$(date +%s)</unique-id>
	<command>/usr/bin/alacritty --working-directory %f</command>
	<description>Example for a custom action</description>
	<range></range>
	<patterns>*</patterns>
	<startup-notify/>
	<directories/>
</action>
<action>
	<icon>visual-studio-code</icon>
	<name>Open with Code</name>
	<submenu></submenu>
	<unique-id>vscode-$(date +%s)</unique-id>
	<command>/usr/bin/code %f</command>
	<description>Open the folder or file in Visual Studio Code.</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
<action>
	<icon>application-audio</icon>
	<name>Convert to MP3</name>
	<submenu></submenu>
	<unique-id>v2mp3-$(date +%s)</unique-id>
	<command>alacritty -e bash -c "~/.local/bin/v2mp3.sh %F"</command>
	<description>Extract audio using ffmpeg</description>
	<range>*</range>
	<patterns>*</patterns>
	<video-files/>
</action>
<action>
	<icon>application-video</icon>
	<name>Convert to MP4</name>
	<submenu></submenu>
	<unique-id>ts2mp4-$(date +%s)</unique-id>
	<command>alacritty -e bash -c "~/.local/bin/ts2mp4.sh %F"</command>
	<description>Convert ts file to mp4 format</description>
	<range>*</range>
	<patterns>*.ts</patterns>
	<video-files/>
</action>
<action>
	<icon>youtube-dl</icon>
	<name>Download Video (Clipboard)</name>
	<submenu></submenu>
	<unique-id>ytdlp-$(date +%s)</unique-id>
	<command>alacritty -e ~/.local/bin/ytdlp.sh %f</command>
	<description>Download YouTube Video (Clipboard)</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
</action>
<action>
	<icon>application-archive-zip</icon>
	<name>Extract</name>
	<submenu></submenu>
	<unique-id>ext-$(date +%s)</unique-id>
	<command>alacritty -e bash -c "~/.local/bin/extract.sh %F"</command>
	<description>Extract zip, rar, 7z, tar archives</description>
	<range>*</range>
	<patterns>*.zip;*.tar.gz;*.7z;*.rar;*.tgz;*.tar.xz;*.tar.bz2</patterns>
	<other-files/>
</action>
<action>
	<icon>application-archive-zip</icon>
	<name>Compress to Zip</name>
	<submenu></submenu>
	<unique-id>zip-$(date +%s)</unique-id>
	<command>alacritty -e bash -c "~/.local/bin/archive.sh %F"</command>
	<description>Compress to zip archive</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<audio-files/>
	<image-files/>
	<other-files/>
	<text-files/>
	<video-files/>
</action>
<action>
	<icon>dialog-password</icon>
	<name>Open as Root</name>
	<submenu></submenu>
	<unique-id>root-$(date +%s)</unique-id>
	<command>pkexec thunar %f</command>
	<description>Open directory and files with root previledge</description>
	<range>*</range>
	<patterns>*</patterns>
	<directories/>
	<other-files/>
</action>
</actions>
